<!doctype html>
<html lang="pt_BR">
    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css">
        <link rel="stylesheet" href="css/styles.css">
        <title>Hello, world!</title>
    </head>
    <body>
        <div class="container-background">
            <div class="login-box bg-white bs-1">
                <form action="chat" method="POST">
                    <div class="d-flex justify-content-center mb-2">
                        <img width="200" src="https://i.pinimg.com/originals/bb/64/5a/bb645a9d548ac63b9d7b7bcdb70fe047.png">
                    </div>
                    <div class="form-group">
                        <input class="form-control rounded-0 border-secondary" name="apelido" type="text" placeholder="Informe seu apelido">
                    </div>
                    <button type="submit" class="btn btn-block btn-outline-dark text-uppercase rounded-0">entrar</button>
                    <% if(error.length) { %>
                        <div class="alert alert-danger mt-3 rounded-0" role="alert">
                            <strong>Atenção</strong>
                            <ul>
                        <% for(var i = 0;i < error.length;i++) { %>
                                <li>Campo <%=error[i].param;%> obrigatório (<%=error[i].msg;%>)</li>
                        <% } %>
                            </ul>
                        </div>
                    <% } %>
                </form>
            </div>
        </div>
        
        <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
        <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js"></script>
    </body>
</html>